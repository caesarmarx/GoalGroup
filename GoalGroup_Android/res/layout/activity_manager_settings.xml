    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/manager_settings_top_view" >
        
        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:background="@drawable/item_middle_selector" >
		        
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_centerVertical="true"
		            android:text="@string/health_state"
		            android:textSize="16sp"
		            android:textColor="#000000" />
		        
		        <ImageView
		            android:id="@+id/switch_health"
			        android:layout_width="60dp"
			        android:layout_height="30dp"
			        android:layout_marginRight="10dp"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:background="@drawable/alarm_on"
			        android:contentDescription="@string/img_desc_empty" />
		        
		    </RelativeLayout>
		    
            <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/item_middle_selector" >
		        
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_centerVertical="true"
		            android:text="@string/new_msg_alarm"
		            android:textSize="16sp"
		            android:textColor="#000000" />
		        
		        <View
		            android:layout_width="match_parent"
		            android:layout_height="1dp"
		            android:layout_marginLeft="5dp"
		            android:layout_marginRight="5dp"
		            android:layout_alignParentBottom="true"
		            android:background="@color/pattern_dark_gray" />
		        
		        <ImageView
		            android:id="@+id/switch_new_msg"
			        android:layout_width="60dp"
			        android:layout_height="30dp"
			        android:layout_marginRight="10dp"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:background="@drawable/alarm_on"
			        android:contentDescription="@string/img_desc_empty" />
		        
		    </RelativeLayout>
		    
            <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:background="@drawable/item_middle_selector" >
		        
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_centerVertical="true"
		            android:text="@string/match_alarm"
		            android:textSize="16sp"
		            android:textColor="#000000" />
		        
		        <View
		            android:layout_width="match_parent"
		            android:layout_height="1dp"
		            android:layout_marginLeft="5dp"
		            android:layout_marginRight="5dp"
		            android:layout_alignParentBottom="true"
		            android:background="@color/pattern_dark_gray" />
		        
		        <ImageView
		            android:id="@+id/switch_match"
			        android:layout_width="60dp"
			        android:layout_height="30dp"
			        android:layout_marginRight="10dp"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:background="@drawable/alarm_on"
			        android:contentDescription="@string/img_desc_empty" />
		        
		    </RelativeLayout>
		    
            <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:background="@drawable/item_middle_selector" >
		        
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_centerVertical="true"
		            android:text="@string/off_notice_alarm"
		            android:textSize="16sp"
		            android:textColor="#000000" />
		        
		        <View
		            android:layout_width="match_parent"
		            android:layout_height="1dp"
		            android:layout_marginLeft="5dp"
		            android:layout_marginRight="5dp"
		            android:layout_alignParentBottom="true"
		            android:background="@color/pattern_dark_gray" />
		        
		        <ImageView
		            android:id="@+id/switch_off_notice"
			        android:layout_width="60dp"
			        android:layout_height="30dp"
			        android:layout_marginRight="10dp"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:background="@drawable/alarm_on"
			        android:contentDescription="@string/img_desc_empty" />
		        
		    </RelativeLayout>
		    
            <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:background="@drawable/item_middle_selector" >
		        
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_centerVertical="true"
		            android:text="@string/enter_req_alarm"
		            android:textSize="16sp"
		            android:textColor="#000000" />
		        
		        <View
		            android:layout_width="match_parent"
		            android:layout_height="1dp"
		            android:layout_marginLeft="5dp"
		            android:layout_marginRight="5dp"
		            android:layout_alignParentBottom="true"
		            android:background="@color/pattern_dark_gray" />
		        
		        <ImageView
		            android:id="@+id/switch_enter_req"
			        android:layout_width="60dp"
			        android:layout_height="30dp"
			        android:layout_marginRight="10dp"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:background="@drawable/alarm_on"
			        android:contentDescription="@string/img_desc_empty" />
		        
		    </RelativeLayout>
		    
            <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:background="@drawable/item_middle_selector" >
		        
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_centerVertical="true"
		            android:text="@string/server_alarm"
		            android:textSize="16sp"
		            android:textColor="#000000" />
		        
		        <ImageView
		            android:id="@+id/switch_server"
			        android:layout_width="60dp"
			        android:layout_height="30dp"
			        android:layout_marginRight="10dp"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:background="@drawable/alarm_on"
			        android:contentDescription="@string/img_desc_empty" />
		        
		    </RelativeLayout>
		    
            <RelativeLayout
                android:id="@+id/switch_accept_area"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/item_middle_selector" >
		        
		        <TextView
		            android:id="@+id/tv_switch_accept"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_centerVertical="true"
		            android:text="@string/accept_req_alarm"
		            android:textSize="16sp"
		            android:textColor="#000000" />
		        
		        <ImageView
		            android:id="@+id/switch_accept"
			        android:layout_width="60dp"
			        android:layout_height="30dp"
			        android:layout_marginRight="10dp"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:background="@drawable/alarm_on"
			        android:contentDescription="@string/img_desc_empty" />
		        
		    </RelativeLayout>
		    
            <RelativeLayout
                android:id="@+id/clear_history"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/item_middle_selector">
		        
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_centerVertical="true"
		            android:text="@string/chat_clear_history"
		            android:textSize="16sp"
		            android:textColor="#000000" />
		        
		        <View
		            android:layout_width="match_parent"
		            android:layout_height="1dp"
		            android:layout_marginLeft="5dp"
		            android:layout_marginRight="5dp"
		            android:layout_alignParentBottom="true"
		            android:background="@color/pattern_dark_gray" />
		    </RelativeLayout>
		    
            <RelativeLayout
                android:id="@+id/send_opinion"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:background="@drawable/item_middle_selector">
		        
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_centerVertical="true"
		            android:text="@string/report_other"
		            android:textSize="16sp"
		            android:textColor="#000000" />
		        
		        <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="20dp"
                     android:src="@drawable/move_next"
                     android:contentDescription="@string/img_desc_empty" />
		    </RelativeLayout>
            
	    </LinearLayout>
    
    </ScrollView>
    
</RelativeLayout>