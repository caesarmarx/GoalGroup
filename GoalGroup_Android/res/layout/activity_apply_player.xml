<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/pattern_gray" >
    
    <include
        android:id="@+id/apply_player_top_view"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        layout="@layout/top_view_common" />
    
    <LinearLayout
        android:id="@+id/ly_filter_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/apply_player_top_view"
        android:orientation="vertical" >
        
        <com.goalgroup.ui.view.GgListView
	        android:id="@+id/applyPlayer_listview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:divider="@color/pattern_dark_gray"/>
        
    </LinearLayout>
    
</RelativeLayout>