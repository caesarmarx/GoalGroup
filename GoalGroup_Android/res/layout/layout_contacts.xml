<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e6e6e6" >
    
    <include
        android:id="@+id/contacts_top_view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        layout="@layout/top_view_main" />
    
    <RelativeLayout
        android:id="@+id/contact_accept_ly"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/contacts_top_view"
        android:background="@drawable/list_cell_bg" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/contact_accept"
            android:textSize="18sp"
            android:textColor="#000000" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/contact_add_ly"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/contact_accept_ly"
        android:background="@drawable/list_cell_bg" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/contact_add"
            android:textSize="18sp"
            android:textColor="#000000" />
        
    </RelativeLayout>
    
    <ListView
        android:id="@+id/contacts_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_add_ly" />
    
</RelativeLayout>